{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": [
    "standard"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "no-var": "error",
    "no-unused-vars": [
      "error",
      {
        "varsIgnorePattern": "^[A-Z].*|on[A-Z].*|.*Transition",
        "argsIgnorePattern": "_"
      }
    ],
    "space-before-function-paren": [
      "warn",
      "never"
    ],
    "max-len": [
      "error",
      {
        "code": 100,
        "tabWidth": 2
      }
    ],
    "curly": "off",
    "no-labels": "off"
  },
  "plugins": [
    "html"
  ],
  "settings": {
    "html/html-extensions": [
      ".svelte",
      ".html"
    ]
  }
}
