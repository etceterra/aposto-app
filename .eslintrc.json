{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": [
    "standard"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "no-var": "error",
    "no-unused-vars": [
      "error",
      {
        "varsIgnorePattern": "^[A-Z].*|on[A-Z].*",
        "argsIgnorePattern": "_"
      }
    ],
    "space-before-function-paren": ["warn", "never"]
  },
  "plugins": [
    "html"
  ],
  "settings": {
    "html/html-extensions": [
      ".svelte",
      ".html"
    ]
  }
}
