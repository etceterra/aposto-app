{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "standard"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "no-var": "error"
    },
    "plugins": [
        "html"
    ],
    "settings": {
        "html/html-extensions": [
            ".svelte"
        ]
    }
}
